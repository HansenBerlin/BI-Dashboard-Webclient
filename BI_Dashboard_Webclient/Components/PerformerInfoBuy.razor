<MudCard Style="padding: 24px; width: 100%; justify-content: center; align-items: center; display: flex; flex-direction: column;">
    <MudCardHeader Style="padding: 0;">
        <CardHeaderContent>
            <MudText Typo="Typo.h6">
                ID: @BuyScoresModel.Id
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Style="display: flex; flex-direction: column; align-items: center;">
        <MudChipSet Style="display: flex;">
            <MudText Style="padding-right: 12px;" Typo="Typo.h5">Punkte</MudText>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.ScCondition)">Zustand: @BuyScoresModel.ScCondition.ToString()</MudChip>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.ScFiringType)">Heizung: @BuyScoresModel.ScFiringType.ToString()</MudChip>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.ScPricetrend)">Preistrend : @BuyScoresModel.ScPricetrend.ToString()</MudChip>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.ScPurchasePrice)">Kaufpreis: @BuyScoresModel.ScPurchasePrice.ToString()</MudChip>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.ScLivingspaceSqmPrice)">QM-Preis Wohnfläche: @BuyScoresModel.ScLivingspaceSqmPrice.ToString()</MudChip>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.ScLotareaSqmPrice)">QM-Preis Grundstück: @BuyScoresModel.ScLotareaSqmPrice.ToString()</MudChip>
            <MudChip Color="@MapColorFromScore(BuyScoresModel.Score)">Gesamtbewertung: @BuyScoresModel.Score.ToString()</MudChip>
        </MudChipSet>
        <div style="display: flex; gap: 80px; padding-top: 32px;">
            <MudCard Style="display: flex; gap: 32px; padding: 16px;">
                <div style="font-weight: bold; display: flex; flex-direction: column;">
                    <MudText Style="font-weight: bold;">Zustand</MudText>
                    <MudText Style="font-weight: bold;">Kaufpreis</MudText>
                    <MudText Style="font-weight: bold;">Baujahr</MudText>
                </div>
                <div style="display: flex; flex-direction: column;">
                    <MudText>@BuyScoresModel.Condition</MudText>
                    <MudText>@BuyScoresModel.PurchasePrice</MudText>
                    <MudText>@BuyScoresModel.YearConstructed</MudText>
                </div>
            </MudCard>
            <MudCard Style="padding: 16px; display: flex; gap: 32px;">
                <div style="display: flex; flex-direction: column;">
                    <MudText Style="font-weight: bold;">Wohnfläche</MudText>
                    <MudText Style="font-weight: bold;">Grundstücksgröße</MudText>
                    <MudText Style="font-weight: bold;">Anzahl Zimmer</MudText>
                </div>
                <div style="display: flex; flex-direction: column;">
                    <MudText>@BuyScoresModel.LivingSpace</MudText>
                    <MudText>@BuyScoresModel.LotArea</MudText>
                    <MudText>@BuyScoresModel.NoRooms QM</MudText>
                </div>
            </MudCard>
            <MudCard Style="padding: 16px; display: flex; gap: 32px;">
                <div style="display: flex; flex-direction: column;">
                    <MudText Style="font-weight: bold;">QM Preis Wohnfläche</MudText>
                    <MudText Style="font-weight: bold;">QM Preis Grundstücksfläche</MudText>
                </div>
                <div style="display: flex; flex-direction: column;">
                    <MudText>@BuyScoresModel.PricePerSqmLivingSpace.ToString("N2")</MudText>
                    <MudText>@BuyScoresModel.PricePerSqmLotArea.ToString("N2")</MudText>
                </div>
            </MudCard>
        </div>
    </MudCardContent>
    <MudCardActions>
        <MudButton 
            OnClick="AddModelToBookMarks" 
            Variant="Variant.Text" 
            Color="Color.Primary">merken</MudButton>
    </MudCardActions>
</MudCard>